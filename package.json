{
  "name": "amazonq-sdd",
  "version": "0.1.5",
  "description": "Spec-driven development workflow for Amazon Q CLI users",
  "main": "dist/cli.js",
  "bin": {
    "amazonq-sdd": "dist/cli.js"
  },
  "scripts": {
    "build": "npm run build:tsc && npm run build:templates && npm run build:bin",
    "build:tsc": "tsc",
    "build:templates": "node scripts/build-templates.js",
    "build:bin": "node scripts/build-executable.js",
    "dev": "ts-node src/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=__tests__ --testPathIgnorePatterns=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "validate:e2e": "node scripts/e2e-validation.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist coverage .nyc_output",
    "prebuild": "npm run clean && npm run typecheck",
    "postbuild": "npm run validate:build",
    "validate:build": "node scripts/validate-build.js",
    "package": "npm run build && npm pack",
    "package:test": "npm run package && node scripts/test-package.js",
    "prepublishOnly": "npm run build",
    "release:patch": "npm version patch && npm run build && npm publish",
    "release:minor": "npm version minor && npm run build && npm publish",
    "release:major": "npm version major && npm run build && npm publish",
    "install:local": "npm run build && npm install -g .",
    "uninstall:local": "npm uninstall -g amazonq-sdd",
    "version:check": "node scripts/version-check.js"
  },
  "keywords": [
    "amazon-q",
    "cli",
    "spec-driven-development",
    "sdd",
    "kiro",
    "development-workflow",
    "ai-assistant"
  ],
  "author": "Amazon Q SDD Contributors",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "handlebars": "^4.7.8",
    "inquirer": "^8.2.6",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^8.2.10",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "files": [
    "dist/",
    "templates/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "preferGlobal": true,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yi-john-huang/amazonq-sdd.git"
  },
  "bugs": {
    "url": "https://github.com/yi-john-huang/amazonq-sdd/issues"
  },
  "homepage": "https://github.com/yi-john-huang/amazonq-sdd#readme"
}
